extends layout

block content
	.container
		div.row
			div.col-sm-10.col-md-10.col-md-offset-2
				h4.text-center.login-title Registration Details
					div.signup-wall
						form(class='form-signin', action='/signup', autocomplete='false', method='POST')
							input(type='text', name='username', class='form-control', placeholder='Username', autocomplete='false', value='', required, autofocus)
							input(type='password', name='password', class='form-control nomargin', placeholder='Password', autocomplete='new-password', required)
							input(type='email', name='email', class='form-control', placeholder='Email',required)
							input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
							input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
							input(type='text', name='deviceId', class='form-control', placeholder='Device ID',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Register
							span.clearfix
				#message
					if message
					h1.text-center.error-message #{message}
