extends layout

block content
	div.container
		div.row
			div.col-xs-12.col-sm-6.col-md-4.col-sm-offset-2.col-md-offset-4
				h3.text-center Sign in to the Time Report System
					div.account-wall
						img(class='special-img', src='/images/default.png')
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='Password', autocomplete='new-password', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
							span.clearfix
					//a(href='/signup', class='text-center new-account') Create an account
					#message
					if message
						h1.text-center.error-message #{message}
